<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiCatAlarm.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiCatAlarm"
    Shell.FlyoutBehavior="Disabled"
    Shell.ForegroundColor="Black"
    TabBarBackgroundColor="Black"
    TabBarForegroundColor="White"
    TabBarUnselectedColor="White"
    TabBarTitleColor="Gold"
    Title="MauiCatAlarm">
    <TabBar>
        <Tab Title="排班闹钟" Icon="Resources\Images\lf.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="班次设置" Icon="Resources\Images\sl.png">
            <ShellContent ContentTemplate="{DataTemplate local:SettingPage}" />
        </Tab>
    </TabBar>

</Shell>
