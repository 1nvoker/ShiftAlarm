<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="This"
             x:Class="MauiCatAlarm.AlarmPage"
             Title="AlarmPage">
    <VerticalStackLayout BindingContext="{x:Reference This}">
        <Label Text="CAT ALARM!" />

        <Label x:Name="ChallengeLabel"
               Text="{Binding Challenge.Prompt}" />

        <Entry x:Name="ChallengeEntry"
               Keyboard="Numeric"
               ReturnType="Done"
               IsSpellCheckEnabled="False"
               Placeholder="Your answer"
               Completed="ChallengeEntry_Completed"/>

        <Button x:Name="StopAlarmButton"
                Text="Stop alarm"
                Clicked="StopAlarmButton_Clicked" />

        <Button x:Name="NewChallengeButton"
                Text="New question"
                Clicked="NewChallengeButton_Clicked" />
    </VerticalStackLayout>
</ContentPage>