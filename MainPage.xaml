<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCatAlarm.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                x:Name="TimeLabel"
                Text="TIME GOES HERE"
                Style="{StaticResource Headline}" />

            <Label x:Name="AlarmPickerLabel" Text="Wake me up some time between:" />
            <TimePicker x:Name="AlarmStartTimePicker" />
            <TimePicker x:Name="AlarmEndTimePicker" />

            <Label x:Name="AlarmLabel" IsVisible="false" />

            <Button
                x:Name="SetAlarmButton"
                Text="Set alarm"
                Clicked="SetAlarmButton_Clicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
