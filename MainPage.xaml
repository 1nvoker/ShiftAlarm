<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCatAlarm.MainPage"
             x:Name="Self">

    <ScrollView>
        <VerticalStackLayout Padding="30,0"
                             Spacing="25"
                             BindingContext="{x:Reference Self}">
            <Label x:Name="TimeLabel"
                   Text="{Binding FormattedCurrentTime}"
                   Style="{StaticResource Headline}" />

            <Label Text="Wake up!"
                   IsVisible="{Binding IsAlarmActive}" />
            <Button x:Name="TurnOffAlarmButton"
                    Text="Turn off alarm"
                    IsVisible="{Binding IsAlarmActive}"
                    Clicked="TurnOffAlarmButton_Clicked" />

            <Label x:Name="AlarmPickerLabel"
                   Text="Wake me up at:"
                   IsVisible="{Binding IsAlarmUnset}"/>
            <TimePicker x:Name="AlarmStartTimePicker"
                        Format="t"
                        IsVisible="{Binding IsAlarmUnset}" />

            <Label x:Name="AlarmLabel"
                   IsVisible="{Binding IsAlarmSet}" />

            <Button x:Name="SetAlarmButton"
                    Text="Set alarm"
                    Clicked="SetAlarmButton_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
